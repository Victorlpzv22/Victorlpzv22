<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.CamarasMadrid" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">#606c38</item>
        <item name="colorPrimaryVariant">#283618</item>
        <item name="colorOnPrimary">#fefae0</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">#283618</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>
    <style name="Theme.CamarasMadrid.SinActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>
    <style name="Theme.CamarasMadrid.CobertorAppBar"
        parent="ThemeOverlay.AppCompat.Dark.ActionBar"/>
    <style name="Theme.CamarasMadrid.CobertorPopup"
        parent="ThemeOverlay.AppCompat.Light"/>
</resources>